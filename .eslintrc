{
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "func-names": 2,
    "no-mixed-spaces-and-tabs": 2,
    "quotes": [2, "single", "avoid-escape"],
    "semi": 2,
    "keyword-spacing": 2,
    "space-before-function-paren": 2,
    "curly": 0,
    "consistent-return": 0,
    "no-use-before-define": 0,
    "no-process-exit": 0,
    "strict": 0
  }
}
